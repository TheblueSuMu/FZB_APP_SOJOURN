<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/activity_commission_details_toolbar"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@drawable/my_brokerage">

        <RelativeLayout
            android:id="@+id/activity_commission_details_return"
            android:layout_marginTop="20dp"
            android:layout_width="50dp"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="14dp"
                android:src="@mipmap/return2" />

        </RelativeLayout>

        <EditText
            android:id="@+id/activity_commission_details_search"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="58dp"
            android:layout_marginTop="27dp"
            android:layout_marginRight="58dp"
            android:imeOptions="actionSearch"
            android:singleLine="true"
            android:background="@drawable/comment"
            android:gravity="center"
            android:hint="按项目搜索"
            android:textColor="#333333"
            android:textSize="15sp" />

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/activity_commission_details_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>