<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="15dp"
    android:background="@drawable/economic_circle"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_marginTop="16dp">


        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/circle_img"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:layout_marginLeft="17dp"
            android:scaleType="center"
            android:src="@mipmap/logo_square"
            app:riv_corner_radius="5dp"
            app:riv_oval="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="69dp"
            android:layout_marginTop="1dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/circle_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="曼谷中央豪庭"
                android:textColor="#ff334485"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/circle_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="2分钟前"
                android:textColor="#ff999999"
                android:textSize="11sp" />
        </LinearLayout>


    </RelativeLayout>

    <TextView
        android:id="@+id/circle_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="14dp"
        android:lineSpacingExtra="5dp" />
    <!--TODO 放照片-->
    <LinearLayout
        android:id="@+id/item_dynamic_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="14dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/circle_img_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/dynamic_ll"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:background="#F3F3F6"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/circle_img_1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:scaleType="fitXY"
            android:src="@mipmap/logo_square" />

        <TextView
            android:id="@+id/circle_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:text="项目名称"
            android:textColor="#ff666666"
            android:textSize="14sp" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/circle_rv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="#EEEEEE"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="20dp">

        <RelativeLayout
            android:id="@+id/circle_zan"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/all_item_shape"
            android:paddingLeft="10dp"
            android:paddingTop="3dp"
            android:paddingRight="10dp"
            android:paddingBottom="3dp">

            <ImageView
                android:id="@+id/item_dynamic_zan"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/icon_2" />

            <TextView
                android:id="@+id/circle_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="6dp"
                android:text="13"
                android:textColor="#ff999999"
                android:textSize="12sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/circle_pinglun"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="@drawable/all_item_shape"
            android:drawableLeft="@mipmap/icon_3"
            android:paddingLeft="7dp"
            android:paddingTop="3dp"
            android:paddingRight="7dp"
            android:paddingBottom="3dp"
            android:text=" 评论"
            android:gravity="center"
            android:textColor="#ff999999"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/circle_fuzhi"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="@drawable/all_item_shape"
            android:drawableLeft="@mipmap/fz"
            android:paddingLeft="7dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:paddingRight="3dp"
            android:text=" 复制"
            android:gravity="center"
            android:textColor="#ff999999"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/circle_lianxi"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="@drawable/all_item_shape"
            android:drawableLeft="@mipmap/icon_iphone"
            android:paddingLeft="7dp"
            android:paddingTop="3dp"
            android:gravity="center"
            android:paddingRight="7dp"
            android:paddingBottom="3dp"
            android:text=" 联系"
            android:textColor="#ff999999"
            android:textSize="12sp" />
    </LinearLayout>


