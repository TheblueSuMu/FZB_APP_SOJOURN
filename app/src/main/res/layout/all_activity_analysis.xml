<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.xcy.fzb.all.persente.GradationScrollView
        android:background="#FFF"
        android:id="@+id/all_activity_analysis_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/all_activity_analysis_l1"
                android:layout_width="match_parent"
                android:layout_height="160dp">

                <ImageView
                    android:id="@+id/all_activity_analysis_backImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </RelativeLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_below="@id/all_activity_analysis_l1"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/all_activity_analysis_salestatus"
                        android:layout_width="25dp"
                        android:layout_height="16dp"
                        android:layout_centerVertical="true"
                        android:background="@drawable/project_salestatus_back"
                        android:gravity="center"
                        android:textColor="#ffac1e26"
                        android:textSize="10sp" />


                    <TextView
                        android:id="@+id/all_activity_analysis_productfeature"
                        android:layout_toRightOf="@id/all_activity_analysis_salestatus"
                        android:layout_width="25dp"
                        android:layout_height="16dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="4dp"
                        android:background="@drawable/all_activity_analysis_back"
                        android:gravity="center"
                        android:textColor="#8296AA"
                        android:textSize="10sp" />


                </RelativeLayout>

                <TextView
                    android:layout_marginTop="14dp"
                    android:id="@+id/all_activity_analysis_house_type"
                    android:textStyle="bold"
                    android:textSize="21sp"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/all_activity_analysis_price_title"
                        android:text="均价："
                        android:textSize="12sp"
                        android:textColor="#666666"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/all_activity_analysis_price"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="#AC1E26"
                        android:layout_marginLeft="11dp"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:layout_weight="1"
                            android:layout_alignParentLeft="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/all_activity_analysis_acreage_img"
                                android:src="@mipmap/analysis_acreage"
                                android:layout_centerVertical="true"
                                android:layout_width="40dp"
                                android:layout_height="40dp"/>

                            <TextView
                                android:id="@+id/all_activity_analysis_acreage_area"
                                android:layout_toRightOf="@id/all_activity_analysis_acreage_img"
                                android:layout_marginLeft="7dp"
                                android:text=""
                                android:textSize="15sp"
                                android:textColor="#000000"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <TextView
                                android:id="@+id/all_activity_analysis_acreage_content"
                                android:layout_toRightOf="@id/all_activity_analysis_acreage_img"
                                android:layout_below="@id/all_activity_analysis_acreage_area"
                                android:layout_marginLeft="7dp"
                                android:layout_marginTop="7dp"
                                android:text="面积约"
                                android:textSize="12sp"
                                android:textColor="#666666"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                        </RelativeLayout>

                    </RelativeLayout>

                    <LinearLayout
                        android:background="#EEEEEE"
                        android:layout_marginTop="10dp"
                        android:layout_width="1dp"
                        android:layout_height="30dp"/>

                    <RelativeLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:layout_weight="1"
                            android:layout_centerInParent="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/all_activity_analysis_compass_img"
                                android:src="@mipmap/analysis_compass"
                                android:layout_centerVertical="true"
                                android:layout_width="40dp"
                                android:layout_height="40dp"/>

                            <TextView
                                android:id="@+id/all_activity_analysis_compass_area"
                                android:layout_toRightOf="@id/all_activity_analysis_compass_img"
                                android:layout_marginLeft="7dp"
                                android:text=""
                                android:textSize="15sp"
                                android:textColor="#000000"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <TextView
                                android:id="@+id/all_activity_analysis_compass_content"
                                android:layout_toRightOf="@id/all_activity_analysis_compass_img"
                                android:layout_below="@id/all_activity_analysis_compass_area"
                                android:layout_marginLeft="7dp"
                                android:layout_marginTop="7dp"
                                android:text="朝向"
                                android:textSize="12sp"
                                android:textColor="#666666"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                        </RelativeLayout>

                    </RelativeLayout>

                    <LinearLayout
                        android:background="#EEEEEE"
                        android:layout_marginTop="10dp"
                        android:layout_width="1dp"
                        android:layout_height="30dp"/>

                    <RelativeLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:layout_alignParentRight="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/all_activity_analysis_percentage_img"
                                android:src="@mipmap/analysis_percentage"
                                android:layout_centerVertical="true"
                                android:layout_width="40dp"
                                android:layout_height="40dp"/>

                            <TextView
                                android:id="@+id/all_activity_analysis_percentage_area"
                                android:layout_toRightOf="@id/all_activity_analysis_percentage_img"
                                android:layout_marginLeft="7dp"
                                android:text=""
                                android:textSize="15sp"
                                android:textColor="#000000"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <TextView
                                android:id="@+id/all_activity_analysis_percentage_content"
                                android:layout_toRightOf="@id/all_activity_analysis_percentage_img"
                                android:layout_below="@id/all_activity_analysis_percentage_area"
                                android:layout_marginLeft="7dp"
                                android:layout_marginTop="7dp"
                                android:text="得房率"
                                android:textSize="12sp"
                                android:textColor="#666666"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                        </RelativeLayout>

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:background="#EEEEEE"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

                <LinearLayout
                    android:layout_marginTop="19dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="所在楼栋："
                            android:textSize="15sp"
                            android:textColor="#666666"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/all_activity_analysis_building"
                            android:layout_marginLeft="19dp"
                            android:singleLine="true"
                            android:textSize="15sp"
                            android:textColor="#111111"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="所属楼盘："
                            android:textSize="15sp"
                            android:textColor="#666666"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/all_activity_analysis_houses"
                            android:layout_marginLeft="19dp"
                            android:singleLine="true"
                            android:textSize="15sp"
                            android:textColor="#111111"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="项目地址："
                            android:textSize="15sp"
                            android:textColor="#666666"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/all_activity_analysis_site"
                            android:layout_marginLeft="19dp"
                            android:singleLine="true"
                            android:textSize="15sp"
                            android:textColor="#334485"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:background="#EEEEEE"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

                <LinearLayout
                    android:id="@+id/all_activity_analysis_analysis_linear"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_marginTop="20dp"
                        android:text="户型解析"
                        android:textStyle="bold"
                        android:textSize="19sp"
                        android:textColor="#111111"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/all_activity_analysis_analysis_title"
                        android:layout_marginTop="19dp"
                        android:textSize="15sp"
                        android:textColor="#111111"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/all_activity_analysis_analysis_content"
                        android:layout_marginTop="15dp"
                        android:textSize="15sp"
                        android:textColor="#666666"
                        android:gravity="left"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <LinearLayout
                        android:layout_marginTop="20dp"
                        android:background="#EEEEEE"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/all_activity_analysis_linear"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_marginTop="20dp"
                        android:text="房贷参考"
                        android:textStyle="bold"
                        android:textSize="19sp"
                        android:textColor="#111111"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <LinearLayout
                        android:layout_marginTop="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent">

                            <com.github.mikephil.charting.charts.PieChart
                                android:layout_marginTop="20dp"
                                android:layout_centerInParent="true"
                                android:id="@+id/all_activity_analysis_piechart"
                                android:layout_width="match_parent"
                                android:layout_height="200dp" />

                        </RelativeLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:paddingLeft="15dp"
                            android:layout_width="0dp"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:layout_marginTop="18dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:text="月供约： "
                                    android:textSize="15sp"
                                    android:textColor="#666666"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                                <TextView
                                    android:id="@+id/all_activity_analysis_monthly_installment"
                                    android:textSize="15sp"
                                    android:textColor="#111111"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_marginTop="9dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:text="总价约： "
                                    android:textSize="15sp"
                                    android:textColor="#666666"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                                <TextView
                                    android:id="@+id/all_activity_analysis_total_price"
                                    android:textSize="15sp"
                                    android:textColor="#111111"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_marginTop="20dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <View
                                    android:layout_gravity="center_vertical"
                                    android:background="@drawable/all_activity_analysis_icon1"
                                    android:layout_width="7dp"
                                    android:layout_height="7dp"/>

                                <TextView
                                    android:layout_marginLeft="9dp"
                                    android:text="首付约： "
                                    android:textSize="15sp"
                                    android:textColor="#666666"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                                <TextView
                                    android:id="@+id/all_activity_analysis_down_payment"
                                    android:textSize="15sp"
                                    android:textColor="#111111"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_marginTop="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <View
                                    android:layout_gravity="center_vertical"
                                    android:background="@drawable/all_activity_analysis_icon2"
                                    android:layout_width="7dp"
                                    android:layout_height="7dp"/>

                                <TextView
                                    android:layout_marginLeft="9dp"
                                    android:text="贷款约： "
                                    android:textSize="15sp"
                                    android:textColor="#666666"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                                <TextView
                                    android:id="@+id/all_activity_analysis_loans"
                                    android:textSize="15sp"
                                    android:textColor="#111111"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_marginTop="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <View
                                    android:layout_gravity="center_vertical"
                                    android:background="@drawable/all_activity_analysis_icon3"
                                    android:layout_width="7dp"
                                    android:layout_height="7dp"/>

                                <TextView
                                    android:layout_marginLeft="9dp"
                                    android:text="利息约： "
                                    android:textSize="15sp"
                                    android:textColor="#666666"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                                <TextView
                                    android:id="@+id/all_activity_analysis_interest"
                                    android:textSize="15sp"
                                    android:textColor="#111111"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                            </LinearLayout>

                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>


    </com.xcy.fzb.all.persente.GradationScrollView>

    <RelativeLayout
        android:id="@+id/all_activity_analysis_toolbar"
        android:paddingTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/all_activity_analysis_return"
            android:layout_width="50dp"
            android:layout_height="50dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15sp"
                android:src="@mipmap/return1" />

        </RelativeLayout>


        <TextView
            android:id="@+id/all_activity_analysis_title"
            android:text=""
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

</RelativeLayout>