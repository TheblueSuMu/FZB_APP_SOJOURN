<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/wll1"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="154dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="85dp"
                android:src="@mipmap/ic_login_logo" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="90dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="29dp"
                    android:layout_marginRight="29dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_tip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="账号"
                        android:textColor="#ff111111"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/et_user_name"
                        android:layout_width="284dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="26dp"
                        android:layout_weight="1"
                        android:imeOptions="actionNext"
                        android:singleLine="true"
                        android:background="@null"
                        android:hint="请输入账号"
                        android:paddingLeft="10dp"
                        android:textSize="12sp" />

                    <FrameLayout
                        android:id="@+id/fl_select_user"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical">

                        <ImageView
                            android:id="@+id/iv_user_state"
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:layout_gravity="center"
                            android:src="@mipmap/ic_login_down" />

                        <TextView
                            android:id="@+id/ctv_get_code"
                            android:layout_width="69dp"
                            android:layout_height="25dp"
                            android:background="@drawable/ic_shape_countdown"
                            android:gravity="center"
                            android:text="获取验证码"
                            android:textColor="#ffffff"
                            android:textSize="10sp"
                            android:visibility="gone" />

                    </FrameLayout>

                </LinearLayout>

                <View
                    android:id="@+id/view_show_pop"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="29dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="29dp"
                    android:background="#ffd2d2d2" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="29dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="29dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_password"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="密码"
                        android:textColor="#ff111111"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/et_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="26dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:imeOptions="actionDone"
                        android:singleLine="true"
                        android:hint="请输入密码"
                        android:inputType="textPassword"
                        android:paddingLeft="10dp"
                        android:textSize="12sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="29dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="29dp"
                    android:background="#ffd2d2d2" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="23dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="29dp"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/cb_is_save_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:button="@null"
                    android:checked="true"
                    android:drawableLeft="@drawable/checkbox_check"
                    android:text="    记住账号"
                    android:textColor="#ff666666"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_forget_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="忘记密码"
                    android:textColor="#ff666666"
                    android:textSize="12sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_user_login"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="38dp"
                android:layout_marginTop="62dp"
                android:layout_marginRight="38dp"
                android:background="@drawable/ic_shape_login_bg"
                android:gravity="center"
                android:text="登录"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />


        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/wll1"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="18dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/wsf2">

                <View
                    android:layout_width="80dp"
                    android:layout_height="1dp"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/qtdl"
                    android:background="#ffeeeeee" />

                <TextView
                    android:id="@+id/qtdl"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:gravity="center"
                    android:text="其他登录"
                    android:textColor="#ff999999"
                    android:textSize="13sp" />

                <View
                    android:layout_width="80dp"
                    android:layout_height="1dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/qtdl"
                    android:background="#ffeeeeee" />

            </RelativeLayout>


            <LinearLayout
                android:id="@+id/wsf2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/wsf1"
                android:layout_gravity="bottom"
                android:layout_marginTop="22dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <LinearLayout
                        android:id="@+id/tv_wechat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="39dp"
                            android:layout_height="39dp"
                            android:layout_gravity="center"
                            android:src="@mipmap/ic_login_wechat" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="8dp"
                            android:text="微信登录"
                            android:textColor="#ff666666"
                            android:textSize="13sp" />
                    </LinearLayout>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/iv_login_type"
                            android:layout_width="39dp"
                            android:layout_height="39dp"
                            android:layout_gravity="center"
                            android:src="@mipmap/ic_login_iphone" />

                        <TextView
                            android:id="@+id/tv_select_login_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="8dp"
                            android:text="短信登录"
                            android:textColor="#ff666666"
                            android:textSize="13sp" />

                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/wsf1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="37dp"
                android:layout_marginBottom="35dp">

                <RelativeLayout
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <CheckBox
                        android:id="@+id/checkboxed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@null"
                        android:checked="true"
                        android:drawableLeft="@drawable/checkbox_check_s"
                        android:gravity="center_vertical"
                        android:text="    登录即代表阅读并同意"
                        android:textColor="#ff666666"
                        android:textSize="9sp" />

                    <TextView
                        android:id="@+id/fuwu"
                        android:layout_toRightOf="@id/checkboxed"
                        android:text="《用户协议及隐私政策》"
                        android:textColor="#334485"
                        android:textSize="9sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>


                </RelativeLayout>


            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>