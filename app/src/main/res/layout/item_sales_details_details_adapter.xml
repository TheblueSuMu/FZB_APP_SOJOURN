<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_sales_details_details_relative"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/item_sales_details_details_relative1"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="18dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/item_sales_details_details_money_img"
            android:src="@mipmap/item_sales_details_details_money"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/item_sales_details_details_relative_title"
            android:layout_toRightOf="@id/item_sales_details_details_money_img"
            android:layout_toLeftOf="@id/item_sales_details_details_back_img"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="7dp"
            android:singleLine="true"
            android:textColor="#ff333333"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <ImageView
            android:layout_alignParentRight="true"
            android:id="@+id/item_sales_details_details_back_img"
            android:layout_centerVertical="true"
            android:src="@mipmap/item_details_yj_jr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_below="@id/item_sales_details_details_relative1"
        android:id="@+id/item_sales_details_details_linear"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="18dp"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <TextView
            android:layout_weight="1"
            android:visibility="gone"
            android:gravity="center_vertical"
            android:id="@+id/item_sales_details_details_relative_content1"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="0dp"/>

        <TextView
            android:layout_weight="1"
            android:visibility="gone"
            android:gravity="center_vertical"
            android:id="@+id/item_sales_details_details_relative_content2"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="0dp"/>

        <TextView
            android:layout_weight="1"
            android:visibility="gone"
            android:gravity="center_vertical"
            android:id="@+id/item_sales_details_details_relative_content3"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="0dp"/>

    </LinearLayout>



    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:text="去看看"
        android:textColor="#ffffffff"
        android:textSize="15sp"
        android:gravity="center"
        android:layout_below="@id/item_sales_details_details_linear"
        android:id="@+id/item_sales_details_details_relative_btn"
        android:background="@drawable/item_sales_details_details_relative_btn_back"
        android:layout_width="110dp"
        android:layout_height="30dp"/>

</RelativeLayout>