<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginRight="1dp"
    android:background="#fff"
    android:orientation="vertical"
    tools:ignore="ResourceName">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginLeft="15dp">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/ImageView"
            android:layout_width="130dp"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:scaleType="fitXY"
            android:src="@mipmap/logo_square"
            app:riv_corner_radius="5dp" />

        <ImageView
            android:id="@+id/item_OnlineState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:src="@mipmap/onlinestate"
            android:visibility="gone" />

        <TextView
            android:id="@+id/group_booking_item"
            android:layout_width="130dp"
            android:layout_height="20dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="85dp"
            android:background="@drawable/pingtuan"
            android:gravity="center"
            android:lines="1"
            android:singleLine="true"
            android:text="可拼团"
            android:textColor="#fff"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/TextViewName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@id/ImageView"
            android:text="项目地址"
            android:textColor="#ff111111"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/item_project_location"
            android:layout_toRightOf="@id/ImageView"
            android:layout_marginTop="17dp"
            android:layout_marginLeft="10dp"
            android:text=""
            android:layout_centerVertical="true"
            android:textSize="12sp"
            android:textColor="#666666"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:id="@+id/www"
            android:layout_marginBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/ImageView">

            <TextView
                android:id="@+id/chick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#666666"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/attention"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text=""
                android:textColor="#666666"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/collect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text=""
                android:textColor="#666666"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/transmit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:singleLine="true"
                android:text=""
                android:textColor="#666666"
                android:textSize="10sp" />


        </LinearLayout>


    </RelativeLayout>

    <View
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:background="#EEEEEE"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

</LinearLayout>