<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".all.view.MyClientActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:background="@drawable/my_brokerage">

            <LinearLayout
                android:id="@+id/my_client_return"
                android:layout_width="50dp"
                android:layout_height="80dp">

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="18dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="35dp"
                    android:src="@mipmap/return2" />
            </LinearLayout>

            <EditText
                android:id="@+id/my_client_ss"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="58dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="58dp"
                android:background="@drawable/comment"
                android:imeOptions="actionSearch"
                android:singleLine="true"
                android:gravity="center"
                android:hint="按客户姓名/手机号搜索"
                android:textColor="#333333"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/client_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/my_client_add"
                android:layout_marginRight="15dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="32dp"/>

            <TextView
                android:id="@+id/my_client_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:text="业务信息"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/my_client_ll_1"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="全部"
                        android:layout_gravity="center_horizontal"
                        android:textColor="#ffffff"
                        android:textSize="15sp" />

                    <LinearLayout
                        android:id="@+id/my_client_ll_8"
                        android:layout_width="27dp"
                        android:layout_height="3dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/back_all"
                        android:orientation="vertical"></LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/my_client_ll_2"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="报备"
                        android:layout_gravity="center_horizontal"
                        android:textColor="#ffffff"
                        android:textSize="15sp" />

                    <LinearLayout
                        android:id="@+id/my_client_ll_9"
                        android:layout_width="27dp"
                        android:layout_height="3dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/back_all"

                        android:orientation="vertical"
                        android:visibility="invisible"></LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/my_client_ll_3"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="到访"
                        android:layout_gravity="center_horizontal"
                        android:textColor="#ffffff"
                        android:textSize="15sp" />

                    <LinearLayout
                        android:id="@+id/my_client_ll_10"
                        android:layout_width="27dp"
                        android:layout_height="3dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/back_all"

                        android:orientation="vertical"
                        android:visibility="invisible"></LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/my_client_ll_4"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="登岛"
                        android:layout_gravity="center_horizontal"
                        android:textColor="#ffffff"
                        android:textSize="15sp" />

                    <LinearLayout
                        android:id="@+id/my_client_ll_11"
                        android:layout_width="27dp"
                        android:layout_height="3dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/back_all"

                        android:orientation="vertical"
                        android:visibility="invisible"></LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/my_client_ll_5"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="认筹"
                        android:layout_gravity="center_horizontal"
                        android:textColor="#ffffff"
                        android:textSize="15sp" />

                    <LinearLayout
                        android:id="@+id/my_client_ll_12"
                        android:layout_width="27dp"
                        android:layout_height="3dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/back_all"

                        android:orientation="vertical"
                        android:visibility="invisible"></LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/my_client_ll_6"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="成交"
                        android:layout_gravity="center_horizontal"
                        android:textColor="#ffffff"
                        android:textSize="15sp" />

                    <LinearLayout
                        android:id="@+id/my_client_ll_13"
                        android:layout_width="27dp"
                        android:layout_height="3dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/back_all"

                        android:orientation="vertical"
                        android:visibility="invisible"></LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/my_client_ll_7"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="失效"
                        android:layout_gravity="center_horizontal"
                        android:textColor="#ffffff"
                        android:textSize="15sp" />

                    <LinearLayout
                        android:id="@+id/my_client_ll_14"
                        android:layout_width="27dp"
                        android:layout_height="3dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/back_all"

                        android:orientation="vertical"
                        android:visibility="invisible"></LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

        <FrameLayout
            android:id="@+id/my_client_fl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/all_no_network"
        android:background="#fff"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageimage"
            android:layout_centerInParent="true"
            android:src="@mipmap/no_network"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:layout_below="@id/imageimage"
            android:id="@+id/all_no_reload"
            android:layout_marginTop="-40dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button_back"
            android:text="重新加载"
            android:textSize="12sp"
            android:textColor="#334485"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

</RelativeLayout>