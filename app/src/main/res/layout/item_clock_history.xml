<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#FFFFFF"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/punching_img"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:scaleType="fitXY"
        android:src="@mipmap/wuxiaodaka"></ImageView>

    <TextView
        android:id="@+id/punching_tv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="110dp"
        android:singleLine="true"
        android:text="白堤路11号店把火箭八点上班时间会"
        android:textColor="#ff111111"
        android:textSize="15sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp">

        <TextView
            android:id="@+id/punching_tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="负责经理：张三"
            android:textColor="#ff333333"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/punching_tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2019-03-03 12:12:12"
            android:textColor="#ff666666"
            android:textSize="12sp"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

</LinearLayout>