<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="ResourceName">

    <TextView
        android:id="@+id/brokerage_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:text="1"
        android:textColor="#111111"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/brokerage_item_roomNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="40dp"
        android:text="2"
        android:textColor="#ff333333"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/brokerage_item_projectName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="59dp"
        android:text="3"
        android:textColor="#ff333333"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/brokerage_item_ziji"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="130dp"
        android:layout_marginTop="79dp"
        android:text="4"
        android:textColor="#ff333333"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/brokerage_item_tradeDat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="5dp"
        android:text="5"
        android:textColor="#ff333333"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:orientation="vertical">

        <ImageView
            android:visibility="gone"
            android:id="@+id/brokerage_item_img"
            android:layout_width="48dp"
            android:layout_height="41dp"
            android:layout_gravity="right"
            android:layout_marginRight="2dp" />

        <TextView
            android:id="@+id/brokerage_item_totalAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="right"
            android:visibility="gone"
            android:text="1"
            android:textColor="#ff333333"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/brokerage_item_secondsAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="right"
            android:visibility="gone"
            android:text="2"
            android:textColor="#ff333333"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/brokerage_item_alreadyAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="right"
            android:visibility="gone"
            android:text="3"
            android:textColor="#ff43987c"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/brokerage_item_notAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="right"
            android:visibility="gone"
            android:text="4"
            android:textColor="#ffc25157"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/the_project_end_tv6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="5dp"
            android:text="已结清"
            android:visibility="gone"
            android:textColor="#999999"
            android:textSize="12sp" />


        <TextView
            android:id="@+id/the_project_end_tv7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="5dp"
            android:text="2019-03-11"
            android:visibility="gone"
            android:textColor="#999999"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/the_project_end_tv8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="5dp"
            android:text=""
            android:visibility="gone"
            android:textColor="#ffc25157"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="125dp"
        android:background="#EEEEEE"></LinearLayout>
</RelativeLayout>