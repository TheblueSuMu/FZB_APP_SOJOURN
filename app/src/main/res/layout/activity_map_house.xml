<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".all.view.MapHouseActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@drawable/my_brokerage">

        <LinearLayout
            android:id="@+id/map_house_return"
            android:layout_width="50dp"
            android:layout_height="80dp">

            <ImageView
                android:layout_width="10dp"
                android:layout_height="18dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="35dp"
                android:src="@mipmap/return2" />
        </LinearLayout>

        <EditText
            android:id="@+id/map_house_search_S"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="58dp"
            android:layout_marginBottom="7dp"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="85dp"
            android:background="@drawable/comment"
            android:imeOptions="actionSearch"
            android:singleLine="true"
            android:gravity="center"
            android:hint="搜索"
            android:textColor="#333333"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/map_house_check"
            android:layout_marginRight="15dp"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="7dp"
            android:drawableRight="@mipmap/ic_stat_name"
            android:gravity="center"
            android:text="门店  "
            android:textColor="#fff"
            android:textSize="15sp"
            />
    </RelativeLayout>

    <com.baidu.mapapi.map.MapView
        android:id="@+id/map_house_mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></com.baidu.mapapi.map.MapView>

</LinearLayout>