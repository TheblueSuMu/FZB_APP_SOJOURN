                            android:layout_width="23dp"
                            android:layout_height="3dp"
                            android:layout_marginLeft="5dp"
                            android:background="#EEEEEE"></LinearLayout>

                        <LinearLayout
                            android:id="@+id/fragment_ll_3"
                            android:orientation="horizontal"
                            android:layout_width="23dp"
                            android:layout_height="3dp"
                            android:background="#EEEEEE"
                            android:layout_marginLeft="5dp"></LinearLayout>
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="15dp">

                        <RadioGroup
                            android:id="@+id/modulebroke_rg1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/rb1_modulebroke"
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"
                                android:background="@drawable/home_selector_all"
                                android:button="@null"
                                android:checked="true"
                                android:text="全部"
                                android:textAlignment="center"
                                android:textColor="@drawable/home_selector_text"
                                android:textSize="13sp" />

                            <RadioButton
                                android:id="@+id/rb2_modulebroke"
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"
                                android:background="@drawable/home_selector"
                                android:button="@null"
                                android:text="昨天"
                                android:textAlignment="center"
                                android:textColor="@drawable/home_selector_text"
                                android:textSize="13sp" />

                            <RadioButton
                                android:id="@+id/rb3_modulebroke"
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"
                                android:background="@drawable/home_selector"
                                android:button="@null"
                                android:text="近七日"
                                android:textAlignment="center"
                                android:textColor="@drawable/home_selector_text"
                                android:textSize="13sp" />

                            <RadioButton
