<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/my_brokerage">

            <RelativeLayout
                android:id="@+id/my_client_relative_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/my_client_return"
                    android:layout_width="50dp"
                    android:layout_height="70dp">

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="18dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="35dp"
                        android:src="@mipmap/return2" />
                </LinearLayout>

                <EditText
                    android:id="@+id/my_client_ss"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="58dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="58dp"
                    android:background="@drawable/comment"
                    android:gravity="center"
                    android:hint="按客户姓名/手机号搜索"
                    android:textColor="#333333"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/client_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="32dp"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/my_client_add"
                    android:visibility="gone"/>

                <ImageView
                    android:id="@+id/client_one_key"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="32dp"
                    android:layout_marginRight="15dp"
                    android:src="@mipmap/project_side_one_key"
                    android:visibility="visible"/>

                <TextView
                    android:id="@+id/my_client_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="30dp"
                    android:text="我的客户"
                    android:textColor="#ffffff"
                    android:textSize="18sp"
                    android:visibility="gone" />

            </RelativeLayout>

            <LinearLayout
                android:layout_below="@id/my_client_relative_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/my_client_ll_2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/my_client_tv_1"
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="报备"
                        android:textColor="#ffffff"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/my_client_unread_1"
                        android:text=""
                        android:textSize="10sp"
                        android:textColor="#FFF"
                        android:gravity="center"
                        android:background="@drawable/my_client_unread_back"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:visibility="invisible"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <LinearLayout
                        android:id="@+id/my_client_ll_9"
                        android:layout_below="@id/my_client_tv_1"
                        android:layout_width="27dp"
                        android:layout_height="3dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/back_all"
                        android:orientation="vertical"
                        android:visibility="visible"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/my_client_ll_3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/my_client_tv_2"
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="到访"
                        android:textColor="#ffffff"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/my_client_unread_2"
                        android:text=""
                        android:textSize="10sp"
                        android:textColor="#FFF"
                        android:gravity="center"
                        android:background="@drawable/my_client_unread_back"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:visibility="invisible"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <LinearLayout
                        android:id="@+id/my_client_ll_10"
                        android:layout_below="@id/my_client_tv_2"
                        android:layout_width="27dp"
                        android:layout_height="3dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/back_all"
                        android:layout_centerHorizontal="true"
                        android:orientation="vertical"
                        android:visibility="invisible"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/my_client_ll_4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/my_client_tv_3"
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="登岛"
                        android:textColor="#ffffff"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/my_client_unread_3"
                        android:text=""
                        android:textSize="10sp"
                        android:textColor="#FFF"
                        android:gravity="center"
                        android:background="@drawable/my_client_unread_back"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:visibility="invisible"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <LinearLayout
                        android:id="@+id/my_client_ll_11"
                        android:layout_below="@id/my_client_tv_3"
                        android:layout_width="27dp"
                        android:layout_height="3dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/back_all"
                        android:orientation="vertical"
                        android:visibility="invisible"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/my_client_ll_5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/my_client_tv_4"
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="认筹"
                        android:textColor="#ffffff"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/my_client_unread_4"
                        android:text=""
                        android:textSize="10sp"
                        android:textColor="#FFF"
                        android:gravity="center"
                        android:background="@drawable/my_client_unread_back"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:visibility="invisible"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <LinearLayout
                        android:id="@+id/my_client_ll_12"
                        android:layout_below="@id/my_client_tv_4"
                        android:layout_width="27dp"
                        android:layout_height="3dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/back_all"
                        android:orientation="vertical"
                        android:visibility="invisible"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/my_client_ll_6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/my_client_tv_5"
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="成交"
                        android:textColor="#ffffff"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/my_client_unread_5"
                        android:text=""
                        android:textSize="10sp"
                        android:textColor="#FFF"
                        android:gravity="center"
                        android:background="@drawable/my_client_unread_back"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:visibility="invisible"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <LinearLayout
                        android:id="@+id/my_client_ll_13"
                        android:layout_below="@id/my_client_tv_5"
                        android:layout_width="27dp"
                        android:layout_height="3dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/back_all"
                        android:orientation="vertical"
                        android:visibility="invisible"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/my_client_ll_7"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/my_client_tv_6"
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="失效"
                        android:textColor="#ffffff"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/my_client_unread_6"
                        android:text=""
                        android:textSize="10sp"
                        android:textColor="#FFF"
                        android:gravity="center"
                        android:background="@drawable/my_client_unread_back"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:visibility="invisible"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <LinearLayout
                        android:id="@+id/my_client_ll_14"
                        android:layout_below="@id/my_client_tv_6"
                        android:layout_width="27dp"
                        android:layout_height="3dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/back_all"
                        android:orientation="vertical"
                        android:visibility="invisible"/>
                </RelativeLayout>

            </LinearLayout>

        </RelativeLayout>

        <FrameLayout
            android:id="@+id/my_client_fl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/all_no_network"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:visibility="gone">

        <ImageView
            android:id="@+id/imageimage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@mipmap/no_network" />

        <Button
            android:id="@+id/all_no_reload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageimage"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-40dp"
            android:background="@drawable/button_back"
            android:text="重新加载"
            android:textColor="#334485"
            android:textSize="12sp" />

    </RelativeLayout>


</RelativeLayout>