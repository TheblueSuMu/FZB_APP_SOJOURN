<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:background="@drawable/commission_to_choose_back"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/commission_item_image"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="15dp"
        android:src="@mipmap/commission_image"
        android:layout_width="60dp"
        android:layout_height="60dp"/>

    <TextView
        android:id="@+id/commission_item_title_activity"
        android:text="旅居产品"
        android:textSize="15sp"
        android:textColor="#111111"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="12dp"
        android:layout_toRightOf="@id/commission_item_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/commission_item_time_activity"
        android:layout_below="@id/commission_item_title_activity"
        android:text="秒结3000元"
        android:textSize="12sp"
        android:textStyle="bold"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="12dp"
        android:visibility="invisible"
        android:layout_toRightOf="@id/commission_item_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/commission_item_money_activity"
        android:layout_below="@id/commission_item_time_activity"
        android:text="总房款4.5%+2000元/㎡+20000元"
        android:textSize="12sp"
        android:textColor="#999999"
        android:textStyle="bold"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="12dp"
        android:layout_toRightOf="@id/commission_item_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>